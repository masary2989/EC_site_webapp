{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-conf-d",
      "host": {
        "sourcePath": "./nginx/conf"
      }
    },
    {
      "name": "nginx-uwsgi-params",
      "host": {
        "sourcePath": "./nginx/uwsgi_params:/etc/nginx/uwsgi_params"
      }
    },
    {
      "name": "nginx-static",
      "host": {
        "sourcePath": "./eth_ec_server/static"
      }
    },
    {
      "name": "db-db",
      "host": {
        "sourcePath": "./db"
      }
    },
    {
      "name": "db-sql",
      "host": {
        "sourcePath": "./sql"
      }
    },
    {
      "name": "web-code",
      "host": {
        "sourcePath": "./eth_ec_server"
      }
    },
    {
      "name": "web-static",
      "host": {
        "sourcePath": "./eth_ec_server/static"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx:1.13",
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf-d",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-uwsgi-params",
          "containerPath": "/etc/nginx/uwsgi_params",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-static",
          "containerPath": "/static",
          "readOnly": true
        }
      ]
    },
    {
      "name": "db",
      "image": "mysql:5.7",
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "db-db",
          "containerPath": "/var/lib/mysql",
          "readOnly": true
        },
        {
          "sourceVolume": "db-sql",
          "containerPath": "/docker-entrypoint-initdb.d",
          "readOnly": true
        }
      ]
    },
    {
      "name": "web",
      "image": "882339870754.dkr.ecr.ap-northeast-1.amazonaws.com/eth_ec_server/web:latest",
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "web-code",
          "containerPath": "/code",
          "readOnly": true
        },
        {
          "sourceVolume": "web-static",
          "containerPath": "/static",
          "readOnly": true
        }
      ]
    }
  ]
}
